{
  "name": "unigine-ui-snippets",
  "displayName": "Unigine UI Snippets",
  "description": "Provides support for custom XML-like languages in .ui, .local, and .rc files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": ["Programming Languages", "Snippets"],
  "activationEvents": [
    "onLanguage:ui",
    "onLanguage:local",
    "onLanguage:rc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [{
      "id": "ui",
      "aliases": ["UI"],
      "extensions": [".ui"],
      "configuration": "./schemas/ui.schema.json"
    }, {
      "id": "local",
      "aliases": ["Local"],
      "extensions": [".local"],
      "configuration": "./schemas/local.schema.json"
    }, {
      "id": "rc",
      "aliases": ["RC"],
      "extensions": [".rc"],
      "configuration": "./schemas/rc.schema.json"
    }],
    "grammars": [{
      "language": "ui",
      "scopeName": "source.ui",
      "path": "./syntaxes/xml.tmLanguage"
    }, {
      "language": "local",
      "scopeName": "source.local",
      "path": "./syntaxes/xml.tmLanguage"
    }, {
      "language": "rc",
      "scopeName": "source.rc",
      "path": "./syntaxes/xml.tmLanguage"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "prettier": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.1.1",
    "typescript": "^4.8.4",
    "vscode-test": "^1.6.2",
    "eslint": "^8.23.1",
    "prettier": "^2.7.1"
  }
}